<!DOCTYPE html>
<html lang="es">

<head>
    <title>
        <%= title %>
    </title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <header>
        <div class="header-btn">
        <button>Pacientes</button>
        <button>Turnos</button>  
        </div>
        <h1>Hospital Italiano</h1>      
    </header>
    <div class="tabla">
        <table>
            <h2>
                <%= message %>
            </h2>
            <tr>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Paciente</th>
                <th>Estado</th>
            </tr>
                <% turnos.forEach(function(turno) { %>
                    <tr>
                        <td>
                            <%= turno.fecha %>
                        </td>
                        <td>
                            <%= turno.hora %>
                        </td>
                        <td>
                            <%= turno.paciente ? turno.paciente : 'Disponible' %>
                        </td>
                        <td>
                            <%= turno.paciente ? 'Reservado' : 'Disponible' %>
                        </td>
                    </tr>
                    <% }); %>
        </table>
    </div>



    <footer>
        <p>Â© <%= new Date().getFullYear() %> Grupo 20</p>
    </footer>
</body>

</html>